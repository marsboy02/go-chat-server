# Go Chat Server Docker Environment Configuration

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Development Mode
DEV_MODE=false

# File Paths (relative to container)
TEMPLATE_DIR=web/templates
STATIC_DIR=web/static

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=go-chat-server

# Optional: External port mapping
EXTERNAL_PORT=8080

# Optional: Traefik Configuration (if using reverse proxy)
TRAEFIK_DOMAIN=chat.localhost

# Optional: Redis Configuration (for future scaling)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3